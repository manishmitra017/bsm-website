{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build && npm run postbuild",
    "postbuild": "node scripts/fix-static-export.js",
    "start": "next start",
    "lint": "next lint",
    "local": "cd .. && ./scripts/run_all.sh",
    "deploy:dev": "sst deploy --stage=dev",
    "deploy:prod": "sst deploy --stage=production",
    "remove:dev": "sst remove --stage=dev",
    "remove:prod": "sst remove --stage=production",
    "sst:install": "npx create-sst@latest",
    "docker:build": "docker build -t bsm-website .",
    "docker:run": "docker run -p 3000:3000 bsm-website",
    "db:start": "docker-compose -f ../docker-compose.yml up -d dynamodb-local",
    "db:stop": "docker-compose -f ../docker-compose.yml down",
    "db:setup-local": "node scripts/setup-local-db.js",
    "db:reset": "node scripts/setup-local-db.js --reset",
    "db:status": "docker-compose -f ../docker-compose.yml ps",
    "db:scan": "aws dynamodb scan --table-name bsm-members-local --endpoint-url http://localhost:8000"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.700.0",
    "@aws-sdk/client-s3": "^3.700.0",
    "@aws-sdk/lib-dynamodb": "^3.700.0",
    "@aws-sdk/s3-request-presigner": "^3.700.0",
    "@tailwindcss/postcss": "^4",
    "@types/nodemailer": "^6.4.17",
    "@vendia/serverless-express": "^4.12.6",
    "bcryptjs": "^2.4.3",
    "framer-motion": "^12.23.19",
    "lucide-react": "^0.544.0",
    "next": "15.5.0",
    "next-auth": "^4.24.11",
    "nodemailer": "^6.9.15",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwindcss": "^4"
  },
  "devDependencies": {
    "@aws-sdk/client-ses": "^3.873.0",
    "@eslint/eslintrc": "^3",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.0",
    "sst": "^3.0.0",
    "typescript": "^5.7.0"
  }
}

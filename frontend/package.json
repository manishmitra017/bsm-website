    "lucide-react": "^0.544.0",
    "next": "15.5.0",
    "nodemailer": "^7.0.5",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwindcss": "^4"
  },
  "devDependencies": {
    "@aws-sdk/client-ses": "^3.873.0",
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.0",
    "sst": "^3.0.0",
    "typescript": "^5.7.0"
  }
